                                                console.log('category exists');
                                                console.log(productIds[categoryId]);
                                                cart_product_check = productIds[categoryId].split(',');

                                                for (let i = 0; i <= cart_product_check.length; i++) {
                                                    if (parseInt(cart_product_check[i]) === productId) {
                                                        console.log('exists')
                                                        exist = true;
                                                    }
                                                }
                                            }

