                                                            }
                                                        }, error: function (data) {
                                                            // console.log(data);
                                                        }
                                                    });
                                                } else {
                                                    alert('You can compare only 3 products')
                                                    $(`[data-id="l${productId}"]`).removeClass('selected_libra')
                                                }

                                            } else {
                                                showModal(productId, productSlug, productName);
                                            }
                                        } else {
